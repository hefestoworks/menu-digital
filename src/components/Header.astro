---
import ThemeToggle from "./ThemeToggle.astro";
import logo from "../assets/logo.png";
import { Image } from "astro:assets";
const { title = "El Bar Secreto" } = Astro.props;
---

<header
  class="sticky top-0 z-10 border-b shadow-lg rounded-b-2xl border-primary-100 dark:border-primary-800/30 bg-gradient-to-r from-background to-primary-50 dark:from-background-dark dark:to-primary-900/20 text-text-primary font-body backdrop-blur-sm bg-opacity-90 dark:bg-opacity-90"
>
  <div
    class="container flex flex-col items-center justify-between px-4 py-4 mx-auto space-y-4 md:flex-row md:space-y-0"
  >
    <!-- Logo y Título -->
    <a href="/" class="flex items-center space-x-4 group">
      <Image
        src={logo}
        alt="Logo del bar"
        class="transition-transform duration-300 w-14 h-14 group-hover:rotate-12"
        loading={"eager"}
      />
      <h1
        class="text-3xl font-black tracking-tight transition-colors text-primary-800 font-heading group-hover:text-primary-600"
      >
        {title}
      </h1>
    </a>

    <!-- Dirección y Teléfono -->
    <div
      class="flex flex-col items-center space-y-3 md:flex-row md:space-y-0 md:space-x-8 text-secondary"
    >
      <a
        href="https://maps.app.goo.gl/DWhpfU1qDi7imN2U6"
        target="_blank"
        class="flex items-center space-x-2 transition-colors hover:text-primary group"
        title="Av. Principal 123, Ciudad"
      >
        <svg
          class="w-5 h-5 transition-transform text-primary group-hover:scale-110"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.828 0l-4.243-4.243a8 8 0 1111.314 0z"
          ></path>
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <span class="hidden font-medium md:inline"
          >Av. Principal 123, Ciudad</span
        >
      </a>
      <a
        href="https://wa.me/+1234567890"
        target="_blank"
        class="flex items-center space-x-2 transition-colors hover:text-primary group"
        title="+1 234 567 890"
      >
        <svg
          class="w-4 h-4 transition-transform text-primary group-hover:scale-110"
          fill="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.047 24l6.305-1.654a11.882 11.882 0 005.693 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"
          ></path>
        </svg>
        <span class="hidden font-medium md:inline">+1 234 567 890</span>
      </a>
    </div>

    <!-- Toggle de Tema -->
    <div class="flex items-center space-x-3">
      <ThemeToggle />
      <span
        id="theme-text"
        class="hidden text-sm font-medium text-secondary md:block"></span>
    </div>
  </div>
</header>

<script>
  // Script mejorado
  document.addEventListener("DOMContentLoaded", () => {
    const themeText = document.getElementById("theme-text");
    const toggleButton = document.querySelector(".theme-toggle-btn");

    if (!themeText || !toggleButton) return;

    const updateThemeText = () => {
      const isDark = document.documentElement.classList.contains("dark");
      themeText.textContent = isDark ? "Oscuro" : "Claro";
    };

    updateThemeText(); // Ejecuta al cargar

    toggleButton.addEventListener("click", () => {
      setTimeout(updateThemeText, 100); // Espera a que se aplique el cambio de tema
    });
  });
</script>
